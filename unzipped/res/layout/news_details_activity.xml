<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar android:id="@id/toolbar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView android:id="@id/nested_scroll_view" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:padding="8.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <com.anslayer.widget.SlayerImage android:id="@id/seriesImage" android:layout_width="@dimen/series_image_sm" android:layout_height="wrap_content" android:scaleType="centerCrop" />
                <Space android:layout_width="@dimen/lg_margin" android:layout_height="wrap_content" />
                <LinearLayout android:orientation="vertical" android:padding="@dimen/lg_margin" android:layout_width="fill_parent" android:layout_height="fill_parent">
                    <androidx.appcompat.widget.AppCompatTextView android:textAppearance="@style/TextAppearance.AppCompat.Small" android:id="@id/newsTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <Space android:layout_width="wrap_content" android:layout_height="@dimen/xl_margin" />
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <io.wax911.support.custom.widget.SingleLineTextView android:id="@id/newsShare" android:padding="@dimen/md_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_share" />
                        <Space android:layout_width="@dimen/sm_margin" android:layout_height="wrap_content" />
                        <io.wax911.support.custom.widget.SingleLineTextView android:id="@id/newsOpenSource" android:padding="@dimen/md_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_open_source" />
                        <Space android:layout_width="@dimen/sm_margin" android:layout_height="wrap_content" />
                        <io.wax911.support.custom.widget.SingleLineTextView android:id="@id/newsOpenVideo" android:padding="@dimen/md_margin" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_open_video" />
                    </LinearLayout>
                    <Space android:layout_width="wrap_content" android:layout_height="@dimen/xl_margin" />
                    <io.wax911.support.custom.widget.SingleLineTextView android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" android:layout_gravity="center_vertical" android:id="@id/newsDate" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <Space android:layout_width="wrap_content" android:layout_height="@dimen/lg_margin" />
            <androidx.appcompat.widget.AppCompatTextView android:id="@id/newsDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
